    /**
     * Display a listing of the resource.
     *
     * @return Response
     */
  public function index(Request $request,$message)
    {
      switch($message){
	case "BlackList":
	$fp = fopen('/home/aki/blacklist.txt', 'ab');
	if ($fp){
	  fwrite($fp,  $request->input('PhoneNum')."\n");
	  fclose($fp);
	  return 1;
	}else{
	  return 0;
	}
      case "log":
	/* ’¥í’¥°’¥Ç’¡¼’¥¿’½à’È÷ */
	      case "TwiML":

	$black_list =  file("/home/aki/blacklist.txt",$flags = FILE_IGNORE_NEW_LINES);
        $from = $request->input('From', '');
	
	if (in_array($from, $black_list)){
	  return view('oleo.reject');
	}else{
	  return view('oleo.index');
	}      
      }
    }

